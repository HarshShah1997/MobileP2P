<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harsh.mobilep2p.MainActivity">

    <TableLayout
        android:layout_width="332dp"
        android:layout_height="236dp"
        android:stretchColumns="0,1,2,3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tableLayout"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp">

        <TableRow
            android:id="@+id/headings"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/ipAddrLabel"
                android:layout_height="wrap_content"
                android:text="@string/ipAddr"
                android:textSize="8sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/batteryStatusLabel"
                android:layout_height="wrap_content"
                android:text="@string/batteryStatusLabel"
                android:textSize="8sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/batteryLabel"
                android:layout_height="wrap_content"
                android:text="@string/batteryLabel"
                android:textSize="8sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ramLabel"
                android:layout_height="wrap_content"
                android:text="@string/ramLabel"
                android:textSize="8sp"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/smartHeadLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smartHeadLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/smartHead"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/smartHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/smartHeadLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <EditText
        android:id="@+id/sendIPAddress"
        android:layout_width="139dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smartHeadLabel"
        app:layout_constraintRight_toLeftOf="@+id/sendFileButton" />

    <Button
        android:id="@+id/sendFileButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:onClick="sendFile"
        android:text="Send"
        app:layout_constraintLeft_toRightOf="@+id/sendIPAddress"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/smartHeadLabel" />

    <EditText
        android:id="@+id/receiveIPAddress"
        android:layout_width="141dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintRight_toLeftOf="@+id/receiveFileButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sendIPAddress" />

    <Button
        android:id="@+id/receiveFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="receiveFile"
        android:text="Receive"
        app:layout_constraintLeft_toRightOf="@+id/receiveIPAddress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendIPAddress" />

</android.support.constraint.ConstraintLayout>
