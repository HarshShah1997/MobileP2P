<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harsh.mobilep2p.MainActivity">

    <TableLayout
        android:layout_width="363dp"
        android:layout_height="255dp"
        android:stretchColumns="0,1,2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tableLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.523"
        android:layout_marginRight="8dp">

        <TableRow
            android:id="@+id/headings"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/ipAddrLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ipAddr" />

            <TextView
                android:id="@+id/batteryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/batteryLabel" />

            <TextView
                android:id="@+id/ramLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ramLabel" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/smartHeadLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smartHeadLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/smartHead"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/smartHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/smartHeadLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</android.support.constraint.ConstraintLayout>
